{
    "compilerOptions": {
      "target": "es5",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  